{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["esnext", "esnext.asynciterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "outDir": "lib",
    "sourceMap": true,
    "incremental": true
  },
  "include": ["src"]
}
